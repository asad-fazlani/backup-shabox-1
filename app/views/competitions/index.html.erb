<style>
#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>
<p id="notice"><%= notice %></p>
<div class="container margin-top85-bottom10">
<h1>Competitions</h1>



<table id="customers">
  <tr>
      <th>Type</th>
      <th>Count</th>
      <th>Per price</th>
      <th>Limits</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
  </tr>
    <% @competitions.each do |competition| %>
  <tr>
        <td><%= competition.competition_type %></td>
        <td><%= competition.count %></td>
        <td><%= competition.per_price %></td>
        <td><%= competition.limits %></td>
        <td><%= competition.start_date %></td>
        <td><%= competition.end_date %></td>
        <td><%= competition.status %></td>
        <td><%= link_to 'Show', competition %></td>
        <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
        <td><%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
  </tr>
    <% end %> 

</table>
<%= link_to 'New Competition', new_competition_path %>
</div>