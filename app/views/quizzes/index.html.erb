<div class="container margin-top85-bottom10">
	<h1 class="mt-3 text-center">Listing all Quizzes</h1>

	<%= render 'quiz', obj: @quizzes, type: "Quiz" %>

	<% if current_user.present? && current_user.admin? %><!--Show new quiz button only for admins-->
		<%= link_to 'New Quiz', new_quiz_path, class: 'btn btn-primary btn-sm', style: "margin-bottom:20px;" %>
	<% end %>
	<div class="d-flex mt-3">
	  <div class="mx-auto">
	    <%= will_paginate @quizzes, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
	  </div>
	</div>
	</div>
