<div class="container margin-top85-bottom10">
<h1 class="text-center mt-3 mb-5">Edit Account Information for <%= @user.username %></h1>

<%= render 'errors' %>
<!--Edit username and email of user-->
<div class="row mt-3">
	<div class="col-md-12 offset-md-3 col-sm-6 offset-sm-3 col-6 offset-3">
		<%= form_for @user do |f| %>
		                    <%= render "devise/shared/error_messages", resource: resource %> 

			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :username %>
				</h5>
					<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :email %>
				</h5>
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
			</div>
			<div class="form-group text-center">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
			</div>
		<% end %>
		<div class="text-center">
			[ <%= link_to "Cancel request and return to profile page", user_path(@user) %> ]
		</div>
	</div>
</div>
</div>