
  <div class="container margin-top85-bottom10">

    <section class="panel panel-default">
      <div class="panel-heading"> 
        <h3 class="panel-title">Login</h3> 
      </div> 
      <div class="panel-body">

        <div class="container">
          <!-- <h2>Bootstrap Mixed Form <p class="lead">with horizontal and inline fields</p></h2> -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: { class: "form-horizontal"}) do |f| %>
          <!-- <form role="form" class="form-horizontal"> -->
            <div class="form-group">
              <label class="col-sm-1" for="inputEmail1">Email or Username</label>
              <div class="col-sm-5"><%= f.text_field :login, class: "form-control", placeholder: "Enter email or username" %></div>
            </div>
            <div class="form-group">
              <label class="col-sm-1" for="inputPassword1">Password</label>
              <div class="col-sm-5"><%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %></div>
            </div>
            <div class="form-group">
              <div class="col-sm-6">
                <%= f.submit "Log In", class: 'btn btn-info pull-right' %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
            <% end %>
            <hr>
          </div>
        </div><!-- panel-body // -->
      </section><!-- panel// -->
    </div> <!-- container// -->


<script type="text/javascript">
    <%#= render "loginvalidate.js" %>
  </script>