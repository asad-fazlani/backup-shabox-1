
<% @ques_id = question_id %><!--ID of the question of this option-->
<div class="row">
	<div class="ml-3 col-md-10 col-sm-10 col-10">
		<%= form_for @option do |f| %>

			<div class="form-group">

				<%= f.label :option %><br/>

				<%= f.text_field :opt_name, class: "form-control", placeholder: "Option" %>

			</div>
			<div class="form-group form-check">
				<%= f.check_box :is_answer, class:"form-check-input" %>
				<label class="form-check-label">Set Answer</label>
			</div>

			<%= f.hidden_field :question_id, value: @ques_id %><!--Pass the question id to the controller-->

			<%= f.submit class: "btn btn-primary" %>

		<% end %>
	</div>
</div>